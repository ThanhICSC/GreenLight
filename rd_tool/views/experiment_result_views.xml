<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="experiment_result_search" model="ir.ui.view">
            <field name="name">Experiment Results Search</field>
            <field name="model">project.experiment.result</field>
            <field name="arch" type="xml">
                <search string="Experiment Results Search">
                    <field name="experiment_id"/>
                </search>
            </field>
        </record>
        <record id="experiment_result_tree" model="ir.ui.view">
            <field name="name">Activities/Results</field>
            <field name="model">project.experiment.result</field>
            <field name="arch" type="xml">
                <tree string="Result" create="true" edit="true">
                    <field name="data_recorded"/>
                    <field name="person"/>
                    <field name="work_hours"/>
                </tree>
            </field>
        </record>
        <record id='experiment_result_form' model="ir.ui.view">
            <field name="name">Activities/results</field>
            <field name="model">project.experiment.result</field>
            <field name="arch" type="xml">
                <form string="Experiments Name">
                    <header>
                        <button name="log" string="Log Results" class="oe_left" type="object"/>
                        <button name="cancel" string="Cancel" type="object" class="oe_left"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="data_recorded"/>
                            <field name="person"/>
                            <field name="work_hours"/>
                        </group>
                        <notebook>
                            <page string="Unresolved TUs">
                                <field name="experiment_unresolved_ids">
                                    <tree editable="bottom">
                                        <field name="actions"/>
                                        <field name="project_uncertainities_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="WORK RESULTS">
                                <field name="work_results"/>
                            </page>
                            <page string="PROBLEMS OBSERVED">
                                <field name="problems_observed"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_experiment_result" model="ir.actions.act_window">
            <field name="name">Experiment Result</field>
            <field name="res_model">project.experiment.result</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_experiment_id':active_id,'search_default_experiment_id':active_id}</field>
        </record>
    </data>
</odoo>