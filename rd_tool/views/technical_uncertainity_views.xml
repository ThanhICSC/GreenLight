<odoo>
    <record id="project_technical_uncertainity_search" model="ir.ui.view">
        <field name="name">Technical Uncertainity Search</field>
        <field name="model">project.technical.uncertainity</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <search string="Technical Uncertainity Search">
                <field name="project_id"/>
            </search>
        </field>
    </record>
    <record id="project_technical_uncertainity_tree" model="ir.ui.view">
        <field name="name">Technical Uncertainity Tree</field>
        <field name="model">project.technical.uncertainity</field>
        <field name="arch" type="xml">
            <tree string="Technical Uncertainity Tree" create="true" edit="true">
                <field name="project_id"/>
                <field name="name"/>
                <field name="status"/>
                <field name="remark"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="project_technical_uncertainity_form" model="ir.ui.view">
        <field name="name">Technical Uncertainity Form</field>
        <field name="model">project.technical.uncertainity</field>
        <field name="arch" type="xml">
            <form string="Technical Uncertainities">
                <sheet>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="remark"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_project_uncertainity" model="ir.actions.act_window">
        <field name="name">uncertinity action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.technical.uncertainity</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_project_tu':active_id,'search_default_project_tu':active_id}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> Create a uncertainities</p>
        </field>
    </record>
</odoo>